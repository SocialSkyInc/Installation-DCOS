    Diagnostics socket  (192.168.38.73,75)
    DNS Dispatcher   (192.168.38.72,73,75)
    DNS Dispatcher Watchdog    (192.168.38.72,73,75)
    DNS Dispatcher Watchdog Timer     (192.168.38.72,73,75)
